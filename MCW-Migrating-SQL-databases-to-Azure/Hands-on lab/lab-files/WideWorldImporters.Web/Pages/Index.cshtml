@page
@model IndexModel
@{
    ViewData["Title"] = "Wide World Importers";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @foreach (var game in Model.Games)
        {
            <li data-target="#myCarousel" data-slide-to="@game.Id"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner0.svg" alt="Tailspin" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <div>
                    <h2>Welcome to Wide World Importer's Tailspin Toys Gamer Web!</h2>
                    <p>
                        <img src="~/images/tailspin-logo.png" class="img-responsive" />
                    </p>
                </div>
            </div>
        </div>
        @foreach (var game in Model.Games)
        {
            <div class="item">
                <img src="@("/images/banner" + game.Id + ".svg")" alt="@game.Title" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <div style="text-align:center">
                        <h2>@game.Title</h2>
                        <p>@game.DescriptionShort</p>
                        <a class="btn btn-default" asp-page="Game" asp-route-id="@game.Id">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Tailspin Toys: The best in online gaming!</h2>
        <p>
            Wide World Importers (WWI) is the developer of the popular Tailspin Toys brand of online video games. Founded in 2010, we continue to innovate in online multiplayer gameing, bringing you the best games on the market!
        </p>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <h4><a href="#">About Us</a></h4>
    </div>
    <div class="col-sm-3">
        <h4><a href="#">Investor Relations</a></h4>
    </div>
    <div class="col-sm-3">
        <h4><a href="#">Careers</a></h4>
    </div>
    <div class="col-sm-3">
        <h4><a href="#">Contact Us</a></h4>
    </div>
</div>
